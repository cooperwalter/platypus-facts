NODE_ENV=production
PORT=3000
BASE_URL=https://your-domain.com
DATABASE_PATH=./data/platypus-facts.db
DAILY_SEND_TIME_UTC=14:00
MAX_SUBSCRIBERS=1000

# Required in production (Twilio SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+15551234567

# Required in production (Postmark email)
POSTMARK_API_TOKEN=your_postmark_api_token
EMAIL_FROM=platypus@your-domain.com

# Optional: required for AI image generation during fact sync
OPENAI_API_KEY=your_openai_api_key
